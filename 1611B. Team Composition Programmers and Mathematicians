def numI():
    return int(input())
def numII():
    return list(map(int, input().split()))
def numIII():
    return list(map(int, input().split(" ")))
def strInp():
    return input()
def strInpI():
    return list(input())

def solve():
    test = numI()
    for i in range(test):
        prog, math = numIII()
        print(min(min(prog, math), (prog+math)//4))
solve()

